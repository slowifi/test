/// <summary>
/// arg1번째의 구조오프셋의 값을 value로 설정
/// <\summary>
function SetOffSet(main, arg1, value){
    dwwrite(main + arg1, value);
}

function GetOffSet(main, arg1){
    return dwread(main + arg1);
}

/// <summary>
/// Status Flag의 bit값을 flag로 설정
/// <\summary>
function SetStsFlg(main, arg1, flag){
    if(dwread(main + 0x0DC) & arg1 != flag){
        if(flag)
		    dwwrite(main + 0x0DC, dwread(main + 0x0DC)+arg1);
        else
            dwwrite(main + 0x0DC, dwread(main + 0x0DC)-arg1);
	}
}

function GetPos(main, arg1){
    return posread_epd(EPD(main) + arg1/4);
}